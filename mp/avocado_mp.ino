#include <Wire.h>#include <Servo.h>const int I2C_SLAVE_ADDRESS = 0x04;const int SERVO_NUM = 4;const int SERVO_PIN_FR = 4; // Foreleg rightconst int SERVO_PIN_FL = 5; // Foreleg leftconst int SERVO_PIN_HR = 6; // Hind leg rightconst int SERVO_PIN_HL = 7; // Hind leg leftconst int SERVO_PIN_ARRAY[SERVO_NUM] = {SERVO_PIN_FR,                                        SERVO_PIN_FL,                                        SERVO_PIN_HR,                                        SERVO_PIN_HL};Servo servo[SERVO_NUM];void setup() {  // I2C Setup  Wire.begin(I2C_SLAVE_ADDRESS);  Wire.onReceive(onReceiveI2C);    // Servo Setup  for (int i=0; i<SERVO_NUM; i++) {    servo[i].attach(SERVO_PIN_ARRAY[i]);  }  servo[0].write(115);  servo[1].write(80);  servo[2].write(97);  servo[3].write(90);  delay(5000);  servo[0].write(65);  servo[1].write(130);  servo[2].write(142);  servo[3].write(45);    delay(8000);  servo[0].write(85);  delay(300);  servo[0].write(60);  delay(300);  servo[0].write(85);  delay(300);  servo[0].write(60);  delay(300);  servo[0].write(65);}void loop() {  /*  servo[0].write(180);  servo[1].write(180);  servo[2].write(0);  servo[3].write(180);  */  /*  servo[0].write(90);  delay(3000);   servo[0].write(180);  delay(3000);   */}void onReceiveI2C(int numBytes) {  while(Wire.available() >= 3) {    // Check data header byte    byte header_byte = Wire.read();    if (header_byte != 255) continue;        // Read channel and angle    byte ch = Wire.read();    byte angle = Wire.read();        // Move servo    if (ch >= SERVO_NUM) continue;    servo[ch].write(angle);  }}